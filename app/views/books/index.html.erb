<h1>Books</h1>
<% @books.each do |b| %>
  <p>Title</p>
　　<span><%= b.title %></span>
  <P>Body</P>
    <span><%= b.body %></span>

<%= link_to "Show",book_path(b.id)%>

<%= link_to "Destroy", book_path(b.id), method: :delete, "data-confirm" => "Are you sure?" %>

<% end %>











<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>

<% end %>