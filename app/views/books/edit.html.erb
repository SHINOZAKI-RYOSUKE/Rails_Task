<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |e| %>
 
  <h4>Title</h4>
  <%= e.text_field :title %>
 
  <h4>Body</h4>
  <%= e.text_area :body %>
 
  <%= e.submit 'Update Book' %>
<% end %>

<span>
  <%= link_to "Show",book_path %>
</span>

<span>
  <%= link_to "Back",books_path %>
</span>